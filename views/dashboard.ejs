      <i class="fas fa-heartbeat me-2"></i>BloodLink
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/donor-form"><i class="fas fa-edit me-1"></i>Donor Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/donor-search"><i class="fas fa-search me-1"></i>Find Donors</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/chat/chat-list"><i class="fas fa-search me-1"></i>Chats</a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-1"></i><%= user.username %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/donor-form"><i class="fas fa-user me-2"></i>My Profile</a></li>
