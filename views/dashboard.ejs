<!-- Flash Messages -->
<div class="container mt-4">
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success_msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <!-- Welcome Section -->
  <div class="card border-danger shadow mb-4">
    <div class="card-body">
      <h4 class="mb-3 text-danger"><i class="fas fa-user-circle me-2"></i>Welcome, <%= user.username %></h4>
      <p class="text-muted mb-2">Email: <%= user.email %></p>

      <% if (donorProfile) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle me-2"></i>Your donor profile is complete.
        </div>
      <% } else { %>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-circle me-2"></i>Please complete your donor profile to be discoverable.
        </div>
      <% } %>
    </div>
  </div>

  <!-- Quick Actions and Stats -->
  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card border-danger shadow-sm h-100">
        <div class="card-body">
          <h6 class="text-danger"><i class="fas fa-id-card me-2"></i>Donor Profile</h6>
          <h4><%= donorProfile ? "Complete" : "Incomplete" %></h4>
          <hr>
          <a href="/donor-form" class="btn btn-sm btn-danger w-100">
            <i class="fas fa-<%= donorProfile ? 'sync' : 'plus' %> me-2"></i>
            <%= donorProfile ? 'Update Profile' : 'Create Profile' %>
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-6 mb-4">
      <div class="card border-danger shadow-sm h-100">
        <div class="card-body">
          <h6 class="text-danger"><i class="fas fa-tint me-2"></i>Blood Group</h6>
          <h4><%= donorProfile ? donorProfile.blood_group : "Not Set" %></h4>
          <hr>
          <% if (donorProfile) { %>
            <small class="text-muted">
              <% if (donorProfile.available) { %>
                <i class="fas fa-check-circle text-success me-2"></i>Available to donate
              <% } else { %>
                <i class="fas fa-times-circle text-warning me-2"></i>Not available for donation
              <% } %>
            </small>
          <% } else { %>
            <small class="text-muted">
              <i class="fas fa-info-circle me-2"></i>Update your profile to show blood group and availability
            </small>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <% if (donorProfile) { %>
    <div class="card border-danger shadow-sm">
      <div class="card-header bg-danger text-white">
        <i class="fas fa-history me-2"></i>Recent Activity
      </div>
      <div class="card-body">
        <p><i class="fas fa-sync-alt me-2"></i>Last updated: <%= new Date(donorProfile.updated_at).toLocaleDateString() %></p>
        <p><i class="fas fa-map-marker-alt me-2"></i>Location: <%= donorProfile.city %></p>
      </div>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
